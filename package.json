{
    "title": "Ntfy Desktop",
    "name": "ntfy-desktop",
    "version": "2.0.1",
    "year": "2025",
    "description": "Ntfy.sh desktop client for Windows, Linux, and MacOS with push notifications. Supports official ntfy.sh website and self-hosted instances.",
    "homepage": "https://github.com/aetherinox/ntfy-desktop",
    "author": "Aetherinox",
    "type": "module",
    "main": "index.js",
    "contributors": [
        {
            "name": "Aetherinox",
            "email": "118329232+Aetherinox@users.noreply.github.com",
            "url": "https://github.com/Aetherinox"
        }
    ],
    "funding": [
        {
            "type": "individual",
            "url": "https://buymeacoffee.com/aetherinox"
        }
    ],
    "publishConfig": {
        "access": "public"
    },
    "build": {
        "appId": "com.ntfydesktop.id",
        "asarUnpack": [
            "./node_modules/toasted-notifier/**/*",
            "./node_modules/semver/**/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aetherinox/ntfy-desktop.git"
    },
    "bugs": {
        "url": "https://github.com/aetherinox/ntfy-desktop/issues"
    },
    "license": "GPLv3",
    "keywords": [
        "ntfy",
        "push notifications",
        "electron",
        "web app",
        "desktop",
        "windows"
    ],
    "scripts": {
        "test": "npx playwright test",
        "pretest": "npm run lint",
        "lint": "eslint index.js",
        "start": "electron .",
        "build:win:windows": "electron-packager . ntfy-desktop --asar --platform=win32 --arch=all --icon=assets/icons/ntfy.ico --overwrite --ignore=\"^/dist|/build|/.github*|/test-*|/tests*|/playwright*|.all-contributorsrc|.editorconfig|.eslintrc|/.git*|.git*|.npm*|.prettier*\" --prune=true --out=build --build-version \"%npm_package_version%\" --appCopyright=\"Copyright (c) %npm_package_year%\" --win32metadata.FileDescription=\"%npm_package_description%\" --win32metadata.ProductName=\"%npm_package_title%\" --win32metadata.OriginalFilename=\"ntfy-desktop.exe\" --win32metadata.CompanyName=\"https://github.com/aetherinox/ntfy-desktop\" --version-string.CompanyName==\"%npm_package_title%\" --version-string.FileDescription=\"%npm_package_description%\" --version-string.ProductName=\"%npm_package_title%\"",
        "build:win:linux": "electron-packager . ntfy-desktop --asar --platform=linux --arch=all --icon=assets/icons/ntfy.png --overwrite --ignore=\"^/dist|/build|/.github*|/test-*|/tests*|/playwright*|.all-contributorsrc|.editorconfig|.eslintrc|/.git*|.git*|.npm*|.prettier*\" --prune=true --out=build --build-version \"%npm_package_version%\" --appCopyright=\"Copyright (c) %npm_package_year%\" --win32metadata.FileDescription=\"%npm_package_description%\" --win32metadata.ProductName=\"%npm_package_title%\" --win32metadata.OriginalFilename=\"ntfy-desktop.exe\" --win32metadata.CompanyName=\"https://github.com/aetherinox/ntfy-desktop\" --version-string.CompanyName==\"%npm_package_title%\" --version-string.FileDescription=\"%npm_package_description%\" --version-string.ProductName=\"%npm_package_title%\"",
        "build:win:mac": "electron-packager . ntfy-desktop --asar --platform=darwin --arch=all --icon=assets/icons/ntfy.icns --overwrite --ignore=\"^/dist|/build|/.github*|/test-*|/tests*|/playwright*|.all-contributorsrc|.editorconfig|.eslintrc|/.git*|.git*|.npm*|.prettier*\" --prune=true --out=build --build-version \"%npm_package_version%\" --appCopyright=\"Copyright (c) %npm_package_year%\" --win32metadata.FileDescription=\"%npm_package_description%\" --win32metadata.ProductName=\"%npm_package_title%\" --win32metadata.OriginalFilename=\"ntfy-desktop.exe\" --win32metadata.CompanyName=\"https://github.com/aetherinox/ntfy-desktop\" --version-string.CompanyName==\"%npm_package_title%\" --version-string.FileDescription=\"%npm_package_description%\" --version-string.ProductName=\"%npm_package_title%\"",
        "build:lin:windows": "electron-packager . ntfy-desktop --asar --platform=win32 --arch=all --icon=assets/icons/ntfy.ico --overwrite --ignore=\"^/dist|/build|/.github*|/test-*|/tests*|/playwright*|.all-contributorsrc|.editorconfig|.eslintrc|/.git*|.git*|.npm*|.prettier*\" --prune=true --out=build --build-version \"$npm_package_version\" --appCopyright=\"Copyright (c) $npm_package_year\" --win32metadata.FileDescription=\"$npm_package_description\" --win32metadata.ProductName=\"$npm_package_title\" --win32metadata.OriginalFilename=\"ntfy-desktop.exe\" --win32metadata.CompanyName=\"https://github.com/aetherinox/ntfy-desktop\" --version-string.CompanyName==\"$npm_package_title\" --version-string.FileDescription=\"$npm_package_description\" --version-string.ProductName=\"$npm_package_title\"",
        "build:lin:linux": "electron-packager . ntfy-desktop --asar --platform=linux --arch=all --icon=assets/icons/ntfy.png --overwrite --ignore=\"^/dist|/build|/.github*|/test-*|/tests*|/playwright*|.all-contributorsrc|.editorconfig|.eslintrc|/.git*|.git*|.npm*|.prettier*\" --prune=true --out=build --build-version \"$npm_package_version\" --appCopyright=\"Copyright (c) $npm_package_year\" --win32metadata.FileDescription=\"$npm_package_description\" --win32metadata.ProductName=\"$npm_package_title\" --win32metadata.OriginalFilename=\"ntfy-desktop.exe\" --win32metadata.CompanyName=\"https://github.com/aetherinox/ntfy-desktop\" --version-string.CompanyName==\"$npm_package_title\" --version-string.FileDescription=\"$npm_package_description\" --version-string.ProductName=\"$npm_package_title\"",
        "build:lin:mac": "electron-packager . ntfy-desktop --asar --platform=darwin --arch=all --icon=assets/icons/ntfy.icns --overwrite --ignore=\"^/dist|/build|/.github*|/test-*|/tests*|/playwright*|.all-contributorsrc|.editorconfig|.eslintrc|/.git*|.git*|.npm*|.prettier*\" --prune=true --out=build --build-version \"$npm_package_version\" --appCopyright=\"Copyright (c) $npm_package_year\" --win32metadata.FileDescription=\"$npm_package_description\" --win32metadata.ProductName=\"$npm_package_title\" --win32metadata.OriginalFilename=\"ntfy-desktop.exe\" --win32metadata.CompanyName=\"https://github.com/aetherinox/ntfy-desktop\" --version-string.CompanyName==\"$npm_package_title\" --version-string.FileDescription=\"$npm_package_description\" --version-string.ProductName=\"$npm_package_title\"",
        "contrib:add": "all-contributors add",
        "contrib:generate": "all-contributors generate",
        "root": "node root.mjs",
        "root:generate": "node root.mjs generate",
        "root:root": "npx --quiet env-cmd --no-override node root.mjs",
        "root:uuid": "npx --quiet env-cmd --no-override node root.mjs uuid",
        "root:guid": "npx --quiet env-cmd --no-override node root.mjs guid",
        "root:version": "node -p require('./package.json').version;"
    },
    "devDependencies": {
        "@aetherinox/noxenv": "^1.1.1",
        "@playwright/test": "^1.52.0",
        "@testing-library/jest-dom": "^6.4.8",
        "@types/node": "^20.14.11",
        "@types/testing-library__jest-dom": "^5.14.9",
        "@types/uuid": "^10.0.0",
        "electron": "^36.4.0",
        "electron-playwright-helpers": "^1.7.1",
        "eslint": "9.28.0",
        "eslint-plugin-chai-friendly": "^1.0.1",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-n": "17.15.0",
        "eslint-plugin-promise": "7.2.1",
        "@stylistic/eslint-plugin-js": "^4.4.1",
        "jimp": "^1.6.0"
    },
    "dependencies": {
        "custom-electron-prompt": "^1.5.8",
        "moment": "2.30.1",
        "semver": "^7.7.2",
        "toasted-notifier": "^10.0.2",
        "uuid": "^11.1.0"
    }
}
